<div rt-props="this.getProps()">
    <label for="height">Height: </label>
    <input type="range" min="0" max="500" step="1" valueLink="{this.linkState('height')}" id="height"/>

    <label for="padding">Vertical Padding: </label>
    <input type="range" min="0" max="500" step="1" valueLink="{this.linkState('padding')}" id="padding"/>
</div>